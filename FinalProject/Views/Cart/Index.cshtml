@model FinalProject.Models.ViewModels.CartViewModels.CartViewModel

@{
    ViewData["Title"] = "Cart";
    ViewBag.pagename = "Shopping Cart";
    ViewBag.img = "hero-image.jpg";
    decimal totallyPrice = 0;
}

<partial name="_Banner2" />

<form method="post" asp-action="Checkout" asp-controller="Cart" >
    <div class="cardBody padding-large">
        <div class="card">
            <div class="cardRow">
                <div class="col-md-8 cart">
                    <div class="title">
                        <div class="cardRow">
                            <div class="col"><h4><b>Shopping Cart</b></h4></div>
                            <div class="col align-self-center text-left text-muted" style="font-size:15px">@Model.Items.Count items</div>
                        </div>
                    </div>

                    @foreach (var item in Model.Items)
                    {
                        if (item.Quantity > 0)
                        {
                            <div class="cardRow border-top border-bottom">
                                <div class="cardRow main align-items-center">
                                    <div class="col-2"><img class="img-fluid" src="/images/@item.Image"></div>
                                    <div class="col">
                                        <div class="cardRow text-muted">Shirt</div>
                                        <div class="cardRow">@item.Name</div>
                                    </div>
                                    <div class="col">
                                        <a href="javascript:void(0);" class="decrease-quantity" data-product-id="@item.ProductId">-</a>
                                        <span class="quantity" data-product-id="@item.ProductId">@item.Quantity</span>
                                        <a href="javascript:void(0);" class="increase-quantity" data-product-id="@item.ProductId">+</a>
                                    </div>
                                    <div class="col">
                                        &euro;&nbsp;@{
                                            totallyPrice += item.Price * item.Quantity;
                                            Write(item.Price * item.Quantity);
                                        }
                                    </div>
                                </div>
                            </div>
                            @if (TempData["ProductError"] != null && TempData["ProductId"] is int tempProductId && tempProductId == item.ProductId)
                            {
                                <span style="font-size: 12px;font-weight: bold;margin-left: 28px;" class="text-danger">
                                    @TempData["ProductError"]
                                </span>
                            }
                        }
                    }
					<select class="form-select payment-method" style="margin-top:20px; max-width:300px;">
						<option selected disabled>Select Payment Method</option>
                        <option value="Card" data-method="Card" class="payment-btn">Credit Card</option>
                        <option value="Cash" data-method="Cash" class="payment-btn">Cash</option>
                    </select>
                    @if (TempData["PaymentError"] != null)
                    {
                        <span class="text-danger" style="font-size: 12px; font-weight: bold;">
                            @TempData["PaymentError"]
                        </span>
                    }
                    <div class="back-to-shop"><a href="/Product/showForUser">&leftarrow;<span class="text-muted" style="margin-left:5px">Back to shop</span></a></div>
                </div>

                <div class="col-md-4 summary">
                    <div><h2>Summary</h2></div>
                    <div class="cardRow" style="margin-bottom:10px">
                        <div class="col" style="padding-left:0;">ITEMS @Model.Items.Count</div>
                        <div class="col text-right">&euro; @totallyPrice</div>
                    </div>
                    <div class="cardRow" style="margin-bottom:10px">
                        <div class="col" style="padding-left:0;">FEES </div>
                        <div class="col text-right">&euro; 5.00</div>
                    </div>
                    <div class="cardRow" style="border-top: 1px solid rgba(0,0,0,.1);">
                        <div class="col" style="padding-left:0;">TOTAL PRICE</div>
                        <div class="col text-right">
                            &euro;&nbsp;@{
                                totallyPrice += 5;
                                @totallyPrice
                            }
                        </div>
                    </div>
                    <button style="margin-top:15%" type="submit">CHECKOUT</button>
                    <input type="hidden" name="paymentMethod" id="paymentMethod">
                    <input type="hidden" name="totalPrice" id="totalPrice" value="@totallyPrice">
                </div>
            </div>
        </div>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".decrease-quantity, .increase-quantity").click(function () {
            var productId = $(this).data("product-id");
            var operation = $(this).hasClass("decrease-quantity") ? "decrease" : "increase";

            $.ajax({
                url: "/Cart/EditQuantity",
                method: "POST",
                data: {
                    productId: productId,
                    quantity: operation === "increase" ? 1 : -1
                },
                success: function (response) {
                    if (response.success) {
                        var quantityElement = $("[data-product-id='" + productId + "'].quantity");
                        quantityElement.text(response.newQuantity);
                        location.reload();
                    } else {
                        alert("Error: " + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("AJAX error: " + error);
                }
            });
        });
		$(".payment-method").change(function () {
			var selectedMethod = $(this).val();
			$("#paymentMethod").val(selectedMethod);
		});
    });
</script>
