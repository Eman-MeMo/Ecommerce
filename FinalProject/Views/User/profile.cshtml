@{
    ViewData["Title"] = "profile";
    ViewBag.pagename = "Profile";
    ViewBag.img = "hero-image1.jpg";
}
@model User
<partial name="_Banner2" />
<div class="page-content page-container padding-xlarge" id="page-content" style="background-color:#e7e6e6;">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="cardd user-card-full">
                    <div class="row m-l-0 m-r-0" style="background-color:#fff;">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">@Model.name</h6>
                                <p>@Model.username</p>
                                <a href="/User/EditProfile/@Model.id"><i class="fa-solid fa-pen-to-square" style="margin-right:5px"></i>Edit</a>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6 m-b-10">
                                        <p class="m-b-0 f-w-600">Username</p>
                                        <h6 class="text-muted f-w-400">@Model.username</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-0 f-w-600">Name</p>
                                        <h6 class="text-muted f-w-400">@Model.name</h6>
                                    </div>
                                    <div class="col-sm-6 m-b-10">
                                        <p class="m-b-0 f-w-600">Age</p>
                                        <h6 class="text-muted f-w-400">@Model.age</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-0 f-w-600">Address</p>
                                        <h6 class="text-muted f-w-400">@Model.address</h6>
                                    </div>
                                    <div class="col-sm-6 m-b-10">
                                        <p class="m-b-0 f-w-600">Gender</p>
                                        <h6 class="text-muted f-w-400">@Model.Gender</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-0 f-w-600">Phone</p>
                                        <h6 class="text-muted f-w-400">@Model.mobileNum</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

