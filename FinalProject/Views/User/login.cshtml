@{
    ViewData["Title"] = "Login";
}
@model User

<style>
    input {
        margin-bottom: 0;
        height: auto
    }
</style>
<section style="background-color:#e7e6e6;padding:50px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div style="border-radius: 1rem;box-shadow: 30px 16px 5px 5px rgba(0, 0, 0, 0.2)">
                    <div class="row g-0" style="background-color:#fff;border-radius: 1rem">
                        <div class="col-md-6 col-lg-6 d-none d-md-block" style="padding:0">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;height:100%;width:110%" />
                        </div>
                        <div class="col-md-6 col-lg-6 d-flex align-items-center">
                            <div class="card-body p-3 p-lg-4 text-black">

                                <form method="post" asp-action="login" asp-controller="User">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0" style="color:black">Ecommarce</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example17" asp-for="username">Username</label>
                                        <input id="form2Example17" class="form-control form-control-lg" asp-for="username" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form2Example27" asp-for="password">Password</label>
                                        <input id="form2Example27" type="password" asp-for="password" class="form-control form-control-lg" style="margin-bottom:0" />
                                    </div>
                                    @if (TempData["LoginError"] != null)
                                    {
                                        <span style="font-size:15px;font-weight:bold" class="text-danger">
                                            @TempData["LoginError"]
                                        </span>
                                    }

                                    <div class="pt-1 mb-4">
                                        <button class="btnn btn-dark btn-lg btn-block" type="submit">Login</button>
                                    </div>


                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a href="/User/signup"
                                                                  style="color: #393f81;">Register here</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>