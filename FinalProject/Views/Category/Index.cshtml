@{
    ViewData["Title"] = "Categories";
    ViewBag.pagename = "Categories";
    ViewBag.img = "admin.jpg";
}

@model List<CategoryViewModel>
<partial name="_Banner2" />
<section style="background-color:#e7e6e6;padding:50px;">
    <a href="/Category/New" class="btn btn-outline-dark" style="text-align:center;background-color:black;
color:#fff;font-size:1.3rem;width: 119px;height: 50px;margin-bottom:30px">New</a>
    <table>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <th>@c.Id</th>
                    <td>@c.Name</td>
                    <td><a href="/Category/Edit/@c.Id" class="btn btn-outline-success">Edit</a></td>
                    <td><button onclick="confirmDelete(@c.Id)" class="btn btn-outline-danger" style="text-transform:none;">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
</section>
<script>
    function confirmDelete(id) {
        var confirmation = confirm("Are you sure to delete this Category?!");
        if (confirmation) {
            window.location.href = "/Category/Delete/" + id;
        }
    }
</script>





