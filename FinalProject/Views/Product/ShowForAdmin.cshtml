@{
    ViewData["Title"] = "Product";
    ViewBag.pagename = "Products";
    ViewBag.img = "admin.jpg";
}

@model List<ProductViewModel>
<partial name="_Banner2" />
<section style="background-color:#e7e6e6;padding:50px">
    <a href="/Product/New" class="btn btn-outline-dark" style="text-align:center;background-color:black;
color:#fff;font-size:1.3rem;width: 119px;height: 50px;margin-bottom:30px">New</a>
    <table class="table" style="border-color:#c7cbd0;">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>


            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                @if (p.mount == 0)
                {
                    <tr style="color:red;">
                        <th>@p.Id</th>
                        <td>@p.Name</td>
                        <td>@p.Price</td>
                        <td>@p.mount</td>
                        <td>@p.CategoryName</td>
                        <td>@p.Description</td>
                        <td><a href="/Product/DetailForAdmin/@p.Id" class="btn btn-outline-dark">Detail</a></td>
                        <td><a href="/Product/Edit/@p.Id" class="btn btn-outline-success">Edit</a></td>
                        <td><a href="/Product/Delete/@p.Id" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
                else
                {
                    <tr style="margin-bottom:5px;">
                        <th>@p.Id</th>
                        <td>@p.Name</td>
                        <td>@p.Price</td>
                        <td>@p.mount</td>
                        <td>@p.CategoryName</td>
                        <td>@p.Description</td>
                        <td><a href="/Product/DetailForAdmin/@p.Id" class="btn btn-outline-dark">Detail</a></td>
                        <td><a href="/Product/Edit/@p.Id" class="btn btn-outline-success">Edit</a></td>
                        <td><button onclick="confirmDelete(@p.Id)" class="btn btn-outline-danger" style="text-transform:none;margin:0px;">Delete</button></td>
                    </tr>
                }
            }

        </tbody>
    </table>
</section>
<script>
    function confirmDelete(id) {
        var confirmation = confirm("Are you sure to delete this Product?!");
        if (confirmation) {
            window.location.href = "/Product/Delete/" + id;
        }
    }
</script>




